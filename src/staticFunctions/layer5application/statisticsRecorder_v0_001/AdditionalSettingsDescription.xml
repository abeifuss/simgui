<?xml version="1.0" encoding="UTF-8"?>
<specificSettings>
	<name>StatisticsRecorder specific settings</name>
	<settingsGroups>
		<settingGroup>
			<name>Connection Handler</name>
			<settings>
				<singleSetting>
					<name>DISPLAY_STAT_PERIOD</name>
					<location type="textcontent">/staticFunction/displayStatPeriod</location>
					<content>
						<int preset="1000" min="10" max="100000" />
					</content>
				</singleSetting>
				<singleSetting>
					<name>DISPLAY_THROUGHPUT</name>
					<location type="textcontent">/staticFunction/displayThroughput</location>
					<content>
						<boolean preset="true" />
					</content>
				</singleSetting>
				<singleSetting>
					<name>DISPLAY_STATS_PER_USER</name>
					<location type="textcontent">/staticFunction/displayStatsPerUser</location>
					<content>
						<boolean preset="false" />
					</content>
				</singleSetting>
				<singleSetting>
					<name>DISPLAY_QUEUE_STATUS</name>
					<location type="textcontent">/staticFunction/displayQueueStatus</location>
					<content>
						<boolean preset="false" />
					</content>
				</singleSetting>
				<singleSetting>
					<name>DISPLAY_MESSAGE_DWELL_TIMES</name>
					<location type="textcontent">/staticFunction/displayMessageDwellTimes</location>
					<content>
						<boolean preset="false" />
					</content>
				</singleSetting>
			</settings>			
		</settingGroup>
	</settingsGroups>
</specificSettings>
